<%= form_for @location_type do |f| %>
  <fieldset>
    <legend><%= header.to_s %></legend>
    <ul>
      <li>
        <%= f.label :user %>
        <%= f.password_field :user %>
      </li>
      <li>
        <%= f.label :name %>
        <%= f.text_field :name %>
      </li>
    </ul>
    <%= f.submit %>
  </fieldset>
<% end %>