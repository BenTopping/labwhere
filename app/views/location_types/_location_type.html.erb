<article id="<%= dom_id(location_type) %>">
    <p><%= location_type.id %>. <%= location_type.name %></p>
    <p><%= link_to_add_data "Locations", location_type_locations_path(location_type) %>: <%= location_type.locations_count %></p>
    <p>
      <%= link_to "Edit", edit_location_type_path(location_type) %> | 
      <%= link_to "Delete", location_type_path(location_type), method: :delete, data: {confirm: "Are you sure?"} %>
    </p>
</article>